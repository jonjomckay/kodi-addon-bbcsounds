<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.bbcsounds" name="BBC Sounds" version="0.1.0" provider-name="jonjomckay">
    <requires>
        <import addon="xbmc.python" version="2.20.0" />
        <import addon="script.module.beautifulsoup4" version="4.3.2" />
        <import addon="script.module.dateutil" version="2.8.1" />
        <import addon="script.module.feedparser" version="5.2.1" />
        <import addon="script.module.requests" version="2.22.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Listen to programmes and podcasts from BBC Sounds</summary>
        <license>MIT</license>
        <description lang="en">This addon allows you to listen to programmes and podcasts from BBC Sounds, with content from all BBC radio stations.</description>
        <platform>all</platform>
        <website>https://www.bbc.co.uk/sounds</website>
        <source>https://github.com/jonjomckay/kodi-addon-bbcsounds</source>
        <disclaimer lang="en">This plugin is not endorsed, commissioned or supported by the BBC</disclaimer>
        <assets>
            <icon>resources/icon.png</icon>
        </assets>
    </extension>
</addon>
